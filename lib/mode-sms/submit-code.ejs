<% var codePlaceholder = i18n.t('sms:passcode:codePlaceholder'); %>

<div class="a0-instructions">
    <p><%= i18n.t('sms:passcode:checkPhoneText') %> <b><%= countryCode + phoneNumber %></b></p>
    <p><%= i18n.t('sms:passcode:receivedText') %></p>
</div>

<div class="a0-inputs">
    <div class="a0-code">
        <label for="a0-signin_sms_code" class="a0-sad-placeholder">
            <%= codePlaceholder %>
        </label>

        <div class="a0-input-box">
            <i class="a0-icon-budicon"></i>

            <input name="code" id="a0-signin_sms_code" type="text" placeholder="<%= codePlaceholder %>" title="<%= codePlaceholder %>">
        </div>
    </div>

</div>
<!-- .a0-inputs -->

<div class="a0-action">
    <button type="submit" class="a0-primary a0-next"><%= i18n.t('sms:passcode:action') %></button>
    <a href="javascript: {}" class="a0-btn-small a0-no-code">
        <%= i18n.t('sms:passcode:cancelAction') %>
    </a>
</div>
