<div class="a0-sms">
    
    <div class="a0-inputs">

        <div class="a0-phone">
            <% var phonePlaceholder = i18n.t('sms:phoneNumber'); %>
            <label for="a0-signin_sms_phone" class="a0-sad-placeholder">
                <%= phonePlaceholder %>
            </label>
            <div class="a0-input-box">
                <i>
                    <a id="a0-signin_sms_country_code" href="javascript: {}"><%= selectedCountryCode %></a>
                </i>
                <input name="phone"
                       id="a0-signin_sms_phone"
                       type="text"
                       value="<%= phoneNumber %>"
                       placeholder="<%= phonePlaceholder %>"
                       title="<%= phonePlaceholder %>"
                       style="padding-left: 60px;">
            </div>
        </div>

    </div>
    <!-- .a0-inputs -->

    <div class="a0-action">
        <button type="submit" class="a0-primary a0-next"><%= i18n.t('sms:send') %></button>
    </div>

</div>

<div class="a0-country-codes a0-hide">

    <h3><%= i18n.t('sms:selectCountryCode') %></h3>

    <ul class="a0-country-codes-list">
        <% for(var i = 0; i < countryCodes.length; i++) { %>
            <li <% if (selectedCountryCode === countryCodes[i].DialCode) { %>class="a0-active"<% } %> data-value="<%= countryCodes[i].DialCode %>">
                <div class="a0-country-name">
                    <%= countryCodes[i].Name %>
                </div>
                <div class="a0-country-code">
                    <%= countryCodes[i].DialCode %>
                </div>
            </li>
        <% } %>
    </ul>

</div>