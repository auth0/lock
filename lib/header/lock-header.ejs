<div class="a0-header a0-top-header <%= locals.embedded ? 'a0-hide' : ''%>">

    <div class="a0-bg-gradient <%= cssBlurSupport ? 'a0-blur-support' : 'a0-blur-no-support' %>">
      <div class="a0-avatar a0-hide">
        <img src=""/>
      </div>

      <div class="a0-image">
        <img class="a0-avatar-guest" src="<%= options.headerIcon %>"/>
      </div>

      <div class="a0-bg-solid-color" style="background-color: <%= options.primaryColor %>"></div>
    </div>

    <div class="a0-icon-container">
      <div class="a0-avatar a0-hide">
        <img src=""/>
      </div>

      <div class="a0-image">
        <img class="a0-avatar-guest" src="<%= options.headerIcon %>"/>
      </div>

      <div class="a0-blank-space"></div>

      <h1><%= options.i18n.t('signin:title') %></h1>
    </div>

    <h2 class="a0-error a0-hide">&#160;</h2>
    <h2 class="a0-success a0-hide">&#160;</h2>

